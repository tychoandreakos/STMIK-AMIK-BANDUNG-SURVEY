# pull official base image
FROM node:12.22.0-alpine

# Set working directory
WORKDIR /server

# Copcy package.json into the container
COPY ./BACKEND-SMTIK-AMIK-SURVEY/package*.json /server/

# Install dependecies
RUN npm install

# Copy the current directory contents into the container /api
# COPY ./BACKEND-SMTIK-AMIK-SURVEY/ /server/

# MAKE port 80 available to the world outside this container
EXPOSE 80

# Run the app when the container launches
CMD ["npm", "start"]
